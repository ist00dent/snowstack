{
  "name": "snowstack",
  "version": "0.1.0",
  "type": "module",
  "description": "Calm, interactive snowfall with accumulation and optional shovel physics for React/Next.js.",
  "keywords": ["react","nextjs","snow","snowfall","canvas","matter-js","animation","winter","seasonal","effects","ui"],
  "repository": { "type": "git", "url": "https://github.com/ist00dent/snowstack" },
  "license": "MIT",
  "author": "Carl Kendrick Camus (ist00dent)",
  "homepage": "https://snowstack-live-demo.vercel.app/",
  "bugs": { "url": "https://github.com/ist00dent/snowstack/issues" },

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "publishConfig": { "access": "public" },

  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },

  "peerDependencies": { "react": "^18 || ^19", "react-dom": "^18 || ^19" },
  "dependencies": { "lucide-react": "^0.268.0", "matter-js": "^0.19.0" },
  "scripts": { "build": "rm -rf dist && tsup src/index.ts --format esm --dts --clean" },
  "devDependencies": { "@types/matter-js": "^0.20.2", "@types/react": "^19.2.7", "tsup": "^8.5.1", "typescript": "^5.0.0" }
}
